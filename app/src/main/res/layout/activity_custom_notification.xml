<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="65dp"
        android:layout_height="65dp">
    <ImageView
        android:id="@+id/imagenotileft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/image"
        android:orientation="vertical"
        android:layout_marginEnd="4dp">
        
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp" />
    
        <TextView
            android:id="@+id/textFirstLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp">

            <LinearLayout
                android:id="@+id/layoutApp1"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageAppIcon1"
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textAppName1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#808080"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutApp2"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageAppIcon2"
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textAppName2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#808080"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutApp3"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/imageAppIcon3"
                    android:layout_width="32dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textAppName3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#808080"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textBelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="1dp"
            android:layout_width="fill_parent" android:layout_height="wrap_content">

            <Button
                android:id="@+id/no"
                android:layout_width="0.0dip" android:layout_height="match_parent"
                android:text="NO"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/yes"
                android:layout_width="0.0dip" android:layout_height="fill_parent"
                android:text="YES"
                android:layout_weight="1.0" />

        </LinearLayout>

        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_tick_green"
            android:id="@+id/ButtonTest"
            android:text="YES" />-->


        
    </LinearLayout>

</RelativeLayout>